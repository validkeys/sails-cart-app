<h2>Add A Product</h2>
{{#if errors}}
{{log errors}}
{{/if}}
<div>
  {{input type="text" name="title" placeholder="Enter a title" value=title}}
</div>
<div>
  {{textarea name="description" placeholder="Enter a description" value=description}}
</div>
<div>
  {{input type="text" name="price" placeholder="Enter a price X.XX" value=price}}
</div>
<div>
  {{input type="text" name="quantityOnHand" placeholder="Enter a quanitity on hand" value=quantityOnHand}}
</div>
<div>
  {{input type="text" name="category" placeholder="Category" value=category}}
</div>
<button {{action "submitNewProduct"}}>Submit</button>